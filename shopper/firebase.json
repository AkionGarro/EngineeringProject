{
  "hosting": {
    "public": "build",
    "rewrites": [
      
      {
        "source": "**",
        "destination": "/index.html",
        "headers": [
          {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin-allow-popups"
          }
      ]
      }
    ],"headers": [
      {
          "source": "**",
          "headers": [
              {
                  "key": "Cross-Origin-Opener-Policy",
                  "value": "same-origin-allow-popups"
              }
          ]
      }
  ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
